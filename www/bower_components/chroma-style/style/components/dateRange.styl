@require '../lib/custom.bootstrap.import.styl'

.daterangepicker
  background-color chroma-footer-bg
  border-radius: $border-radius-base

.daterangepicker .ranges li
  background: cf-gray
  border: 1px solid #f5f5f5;
  color: #eee
  border-radius: $border-radius-base

.daterangepicker .ranges li.active, .daterangepicker .ranges li:hover
  background-repeat repeat-x !important
  border none !important
  background-image linear-gradient(to right, cf-blue, cf-cyan) !important

.daterangepicker .calendar-table
  background-color chroma-footer-bg
  border-radius: $border-radius-base

.daterangepicker td.off, .daterangepicker td.off.in-range, .daterangepicker td.off.start-date, .daterangepicker td.off.end-date
  color: #777;
  background-color chroma-footer-bg

.daterangepicker .input-mini, input.input-mini, .daterangepicker_input
  background-color cf-gray
  color #eee
  border-radius: $border-radius-base

.daterangepicker td.available:hover, .daterangepicker th.available:hover
  background: cf-gray

.daterangepicker td.in-range
  background: $gray
  border-radius: $border-radius-base

.daterangepicker td.start-date
  border-radius: 4px 0 0 4px;

.daterangepicker td.end-date
  border-radius: 0 4px 4px 0;

.daterangepicker td.start-date.end-date
  border-radius: $border-radius-base

.daterangepicker td.active, .daterangepicker td.active:hover
  background-color: #357ebd;
  border-color: #3071a9;
  color: #fff;

.daterangepicker td.week, .daterangepicker th.week
  font-size: 80%;
  color: #ccc;
